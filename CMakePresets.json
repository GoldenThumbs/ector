{
   "version": 3,
   "cmakeMinimumRequired": {
      "major": 3,
      "minor": 14,
      "patch": 0
   },
   "configurePresets": [
      {
         "name": "linux-x86_64",
         "displayName": "Linux x86_64",
         "generator": "Ninja",
         "binaryDir": "${sourceDir}/build/linux-x86_64",
         "cacheVariables": {
            "CMAKE_C_COMPILER": "/usr/bin/clang",
            "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
            "CMAKE_BUILD_TYPE": "Release"
         }
      },
      {
         "name": "windows-x86_64",
         "displayName": "Windows x86_64",
         "generator": "Ninja",
         "binaryDir": "${sourceDir}/build/windows",
         "cacheVariables": {
            "CMAKE_C_COMPILER": "/usr/bin/x86_64-w64-mingw32-gcc",
            "CMAKE_CXX_COMPILER": "/usr/bin/x86_64-w64-mingw32-g++",
            "CMAKE_BUILD_TYPE": "Release"
         }
      }
   ],
   "buildPresets": [
      {
         "name": "Windows",
         "description": "",
         "displayName": "",
         "configurePreset": "windows-x86_64"
      }
   ],
   "testPresets": [
      {
         "name": "Windows",
         "description": "",
         "displayName": "",
         "configurePreset": "windows-x86_64"
      }
   ]
}